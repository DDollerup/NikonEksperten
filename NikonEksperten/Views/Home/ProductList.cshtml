@model List<Product>
@{
    ViewBag.Title = "ProductList";
}

<div class="row">
    <div class="col-12">
        <h2>Kategoriens Navn</h2>
    </div>
    <div class="col-2">
        Søgning
    </div>
    <div class="col-10">
        <div class="row">
            <div class="col-12">
                @foreach (Product product in Model)
                {
                    <div class="productListItem">
                        <div>
                            @product.Name
                        </div>
                        <div class="row">
                            <div class="col-3">
                                <img src="~/Content/Images/Products/@product.Image" class="img-responsive" />
                            </div>
                            <div class="col-3">
                                <table>
                                    <tr>
                                        <td>Varenummer</td>
                                        <td>@product.ID</td>
                                    </tr>
                                    <tr>
                                        <td>Pris</td>
                                        <td>@product.Price</td>
                                    </tr>
                                    <tr>
                                        <td>Leveringstid</td>
                                        <td>2-3 Dage</td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-3">
                                <table>
                                    <tr>
                                        <td>Producdent</td>
                                        <td>@product.ManufactureID</td>
                                    </tr>
                                    <tr>
                                        <td>Tilbud</td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td>Lager antal:</td>
                                        <td>@product.StorageAmount</td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-3">
                                <div>
                                    Se Mere
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

